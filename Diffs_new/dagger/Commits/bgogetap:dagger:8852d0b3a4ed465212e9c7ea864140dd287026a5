+  @Override
+  protected void checkScopes(ValidationReport.Builder<ExecutableElement> builder) {
+    for (Scope scope : scopesOf(builder.getSubject())) {
+      builder.addError(
+          "@BindsOptionalOf methods cannot be scoped",
+          builder.getSubject(),
+          scope.scopeAnnotation());
+    }
+  }
