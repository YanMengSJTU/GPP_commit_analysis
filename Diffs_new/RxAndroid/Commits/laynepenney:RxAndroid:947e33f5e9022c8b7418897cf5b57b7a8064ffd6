+package rx.android.lifecycle;
+
+/**
+ * Lifecycle events that can be emitted by Activities or Fragments.
+ */
+public enum LifecycleEvent {
+    ATTACH,
+    CREATE,
+    CREATE_VIEW,
+    START,
+    RESUME,
+    PAUSE,
+    STOP,
+    DESTROY_VIEW,
+    DESTROY,
+    DETACH
+}
