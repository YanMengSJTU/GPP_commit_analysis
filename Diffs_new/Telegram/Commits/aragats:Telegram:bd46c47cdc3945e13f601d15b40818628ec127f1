+    private List<Post> filterVKPostsByLikes(List<Post> posts) {
+        if (posts == null) {
+            return null;
+        }
+        List<Post> result = new ArrayList<>();
+        for (Post post : posts) {
+            if (post.getLikes() >= 10) {
+                result.add(post);
+            }
+        }
+        return result;
+    }
