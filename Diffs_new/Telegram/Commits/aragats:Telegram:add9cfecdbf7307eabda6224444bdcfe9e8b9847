+    private List<Post> filterVKPosts(List<Post> posts) {
+        if (posts == null) {
+            return null;
+        }
+        List<Post> result = new ArrayList<>();
+        for (Post post : posts) {
+            if (!StringUtils.isEmpty(post.getText())) {
+                result.add(post);
+            }
+        }
+        return result;
+    }
