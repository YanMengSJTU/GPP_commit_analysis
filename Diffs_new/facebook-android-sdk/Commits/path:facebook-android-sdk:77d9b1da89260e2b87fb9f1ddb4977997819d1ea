     public void dialog(Context context, String action,
             DialogListener listener) {
+
+        // most likely context is an activity context, since Dialog cannot work application context
+        // if context is an activity context and if it's not finishing then start the dialog
+        if (context != null && context instanceof Activity) {
+            if (!((Activity) context).isFinishing()) {
+                dialog(context, action, new Bundle(), listener);
+            }
+            return;
+        }
         dialog(context, action, new Bundle(), listener);
     }
 
