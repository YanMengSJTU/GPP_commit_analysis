+    /**
+     * Cancels all requests by a specific tag
+     * @param tag
+     */
+    public void cancel(String tag){
+        synchronized (mQueue){
+            Iterator<DBRequest> it = mQueue.iterator();
+            while(it.hasNext()){
+                DBRequest next = it.next();
+                if(next.getName().equals(tag)){
+                    it.remove();
+                }
+            }
+        }
+    }
