-		if (Log.isEnabled()) {
-			Log.v("Migrating table " + tableInfo.getTableName() + 
-					" from schema '" + tableDifference.getSqlTableInfo().getSchema() + 
-					"' to schema '" + SQLiteUtils.createTableDefinition(tableInfo) + "'");
-		}
-		
-		if (tableDifference.isOnlyAdd()) {
